@model Movies.Models.Movie

@{
    ViewData["Title"] = "Delete";
}
<div class="row col-8 text-light movie-admin">

    <h1>Delete</h1>

    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>Movie</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Title)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Title)
            </dd>
            <dt class="col-sm-3 ">
                @Html.DisplayNameFor(model => model.PosterImagePath)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.PosterImagePath)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Overview)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Overview)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Score)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Score)
            </dd>
        </dl>

        <form asp-action="Delete" class="pt-5 text-center">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-action="Index" class="btn btn-info">Back to List</a>
        </form>
    </div>
</div>

<div class="col-4 movie-poster">
    <img src="@Url.Content("~/img/" + @Model.PosterImagePath)" alt="" />
</div>