@model IEnumerable<Movies.Models.Movie>

@{
    ViewData["Title"] = "Index";
}
<div class="text-light col-10">
    <h1>Movies List</h1>

    <p>
        <a asp-action="Create" class="btn btn-primary">Create New</a>
    </p>
    <table class="table text-light">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Overview)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Score)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Overview)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Score)
                    </td>
                    <td class="text-center">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning text-dark">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info text-dark">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger text-dark">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
