@model Movie

<div class="container">
    <div class="row text-light">
        <div class="col-lg-8">
            <h1>@Model.Title</h1>
            <h3>Overview:</h3>
            <h4>@Model.Overview</h4>
            <h3>Score :</h3>
            <h3>
                @{
                    string color = "";
                    if (Model.Score >= 8)
                        color = "green";
                    else if (Model.Score >= 5)
                        color = "orange";
                    else
                        color = "red";
                    <span class="@color">@Model.Score</span>
                }
            </h3>
        </div>
        <div class="col-lg-4 movie-poster">
            <img src="@Url.Content("~/img/" + @Model.PosterImagePath)" alt="" />
        </div>
    </div>
</div>
